<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.ryan.mychatapp.SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_profile" />

    <TextView
        android:id="@+id/settings_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="UserName"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/settings_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="User Profile Status"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/settings_change_profile_image_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/settings_change_profile_status_btn"
        android:layout_alignStart="@+id/settings_change_profile_status_btn"
        android:layout_marginBottom="19dp"
        android:background="@android:color/background_light"
        android:text="Change Image"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <Button
        android:id="@+id/settings_change_profile_status_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/settings_profile_image"
        android:layout_marginBottom="20dp"
        android:background="@android:color/holo_green_dark"
        android:text="Change Status"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</RelativeLayout>
